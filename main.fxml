<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="mainPanel" xmlns:fx="http://javafx.com/fxml" fx:controller="sample.Controller">
    <top>
        <MenuBar>
            <menus>
                <Menu text="Contacts">
                    <items>
                        <MenuItem onAction="#showAddEntryDialog" text="Add..." />
                    </items>
                    <items>
                        <MenuItem onAction="#showEditEntryDialog" text="Edit..." />
                    </items>
                    <items>
                        <MenuItem onAction="#deleteEntry" text="Delete..." />
                    </items>
                </Menu>
                <Menu text="View">
                    <items>
                        <Menu text="Sort By ...">
                            <items>
                                <MenuItem text="First Name" />
                                <MenuItem text="Last Name" />
                                <MenuItem text="Email" />
                            </items>
                        </Menu>
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <MenuItem onAction="#showAboutDialog" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <TableView fx:id="contactsTable">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn sortable="false" text="ID">
                    <cellValueFactory>
                        <PropertyValueFactory property="id" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn sortable="false" text="Full Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="fullName" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn sortable="false" text="Email Address">
                    <cellValueFactory>
                        <PropertyValueFactory property="email" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn sortable="false" text="Notes">
                    <cellValueFactory>
                        <PropertyValueFactory property="note" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox prefHeight="11.0" prefWidth="322.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Total Number of Records: " />
                <Label fx:id="counter" disable="true" text="0" />
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>
